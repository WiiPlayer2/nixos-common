{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "nix eval .#tests --override-input common path:/etc/nixos/flakes/common",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "debug",
      "type": "shell",
      "command": "nix eval .#tests --show-trace --ignore-try --debugger --override-input common path:/etc/nixos/flakes/common",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    }
  ]
}
